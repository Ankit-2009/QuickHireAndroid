<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/d_background">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/vd2"
        android:elevation="0dp"
        android:alpha="0.3"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_marginTop="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_hire"
            android:textColor="#0a1800"
            android:textSize="28sp"
            android:textStyle="bold"
            android:shadowColor="@color/yellowgreen"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowRadius="6"
            android:layout_marginBottom="20dp"/>

                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="250dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/png_computer_pc_70549"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="288dp"
                        android:layout_height="175dp"
                        android:src="@drawable/vd5"
                        android:layout_centerHorizontal="true"
                        />

                    <ImageView
                        android:layout_width="288dp"
                        android:layout_height="175dp"
                        android:src="@drawable/d_background"
                        android:alpha="0.7"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/hire_the_quickest_freelancer"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="2.5"
                        android:shadowColor="@color/yellowgreen"
                        android:textColor="@color/white"
                        android:layout_marginTop="50dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="100dp">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Log In"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="16sp"
                            app:cornerRadius="8dp"
                            android:shadowDy="0"
                            android:shadowDx="0"
                            android:shadowColor="@color/yellowgreen"
                            android:shadowRadius="1.5"
                            app:strokeColor="@color/yellowgreen"
                            app:strokeWidth="2dp"
                            android:backgroundTint="@color/cardview_dark_background"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="5dp"
                            android:text="Sign Up"
                            android:textSize="16sp"
                            app:cornerRadius="8dp"
                            android:shadowDy="0"
                            android:shadowDx="0"
                            android:shadowColor="@color/yellowgreen"
                            android:shadowRadius="1.5"
                            app:strokeColor="@color/yellowgreen"
                            app:strokeWidth="2dp"
                            android:backgroundTint="@color/cardview_dark_background"/>

                    </LinearLayout>

                </RelativeLayout>

    </LinearLayout>

</RelativeLayout>